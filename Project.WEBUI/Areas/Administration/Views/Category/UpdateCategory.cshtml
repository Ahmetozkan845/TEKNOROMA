@model CategoryVM

@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Areas/Administration/Views/Shared/_AdminLayout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.Category.ID)
    <div class="row container">
        <div class="col-sm-10">
            <section class="panel">
                <header class="panel-heading">
                    Kategori Güncelleme Sayfası
                </header>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">
                            İsim
                        </label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Category.CategoryName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Category.CategoryName)
                        </div>
                    </div>
                    <br /><br />

                    <div class="form-group">
                        <label class="col-sm-2 control-label">
                            Açıklama
                        </label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Category.Description, new { @class = "form-control" })
                        </div>
                    </div>
                    <br /><br />

                    <div class="form-group">
                        <div class="col-sm-10">
                            <button class="btn btn-warning">Kategori Güncelle</button>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
}
