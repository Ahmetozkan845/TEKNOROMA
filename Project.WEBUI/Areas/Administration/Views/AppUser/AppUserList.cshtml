@model AppUserVM
@{
    ViewBag.Title = "AppUserList";
    Layout = "~/Areas/Administration/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel-body">
    <div class="adv-table">
        <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Kullanıcı Adı</th>
                    <th>Email</th>
                    <th class="hidden-phone">Rolü</th>
                    <th class="hidden-phone">Hesap Aktif mi?</th>
                    <th class="hidden-phone">Durum</th>
                    <th class="hidden-phone">Sil</th>
                    <th class="hidden-phone">Güncelle</th>
                </tr>
            </thead>
            <tbody>
                @foreach (AppUser item in Model.AppUsers)
                {
                    <tr class="gradeX">
                        <td>@item.ID</td>
                        <td>@item.UserName</td>
                        <td>@item.Email</td>
                        <td class="hidden-phone">@item.Role</td>
                        <td class="hidden-phone">@item.Active</td>
                        <td class="center hidden-phone">@item.Status</td>
                        <td class="center hidden-phone">@Html.ActionLink(" ", "DeleteAppUser", new { id = item.ID }, new { @class = "btn text-danger fas fa-times" })</td>
                        <td class="center hidden-phone">@Html.ActionLink(" ", "UpdateAppUser", new { id = item.ID }, new { @class = "btn text-warning fas fa-edit" })</td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>

<script src="~/Areas/Administration/AdminContent/AppUserDTJ.js"></script>