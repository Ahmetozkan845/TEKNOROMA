@model EmployeeVM
@{
    ViewBag.Title = "EmployeeList";
    Layout = "~/Areas/Administration/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel-body">
    <div class="adv-table">
        <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>İsim</th>
                    <th>Soyisim</th>
                    <th>TC No</th>
                    <th class="hidden-phone">Telefon</th>
                    <th class="hidden-phone">Email</th>
                    <th class="hidden-phone">Rol</th>
                    <th class="hidden-phone">Maaş</th>
                    <th class="hidden-phone">Aylık Satış</th>
                    <th class="hidden-phone">Durum</th>
                    <th class="hidden-phone">Sil</th>
                    <th class="hidden-phone">Güncelle</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Employee item in Model.Employees)
                {
                    <tr class="gradeX">
                        <td>@item.ID</td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.TCNO</td>
                        <td class="hidden-phone">@item.PhoneNumber</td>
                        <td class="hidden-phone">@item.Email</td>
                        <td class="hidden-phone">@item.Role</td>
                        <td class="hidden-phone">@item.Salary</td>
                        <td class="hidden-phone">@item.MonthlySales</td>
                        <td class="center hidden-phone">@item.Status</td>
                        <td class="center hidden-phone">@Html.ActionLink(" ", "DeleteEmployee", new { id = item.ID }, new { @class = "btn text-danger fas fa-times" })</td>
                        <td class="center hidden-phone">@Html.ActionLink(" ", "UpdateEmployee", new { id = item.ID }, new { @class = "btn text-warning fas fa-edit" })</td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>


<script src="~/Areas/Administration/AdminContent/EmployeeDTJ.js"></script>