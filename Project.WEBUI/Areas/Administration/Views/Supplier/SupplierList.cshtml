@model SupplierVM
@{
    ViewBag.Title = "SupplierList";
    Layout = "~/Areas/Administration/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel-body">
    <div class="adv-table">
        <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tedarikçi Şirket</th>
                    <th>Yetkili İsmi</th>
                    <th>Telefon</th>
                    <th>Ülke</th>
                    <th>Şehir</th>
                    <th class="hidden-phone">Durum</th>
                    <th class="hidden-phone">Sil</th>
                    <th class="hidden-phone">Güncelle</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Supplier item in Model.Suppliers)
                {
                    <tr class="gradeX">
                        <td>@item.ID</td>
                        <td>@item.CompanyName</td>
                        <td>@item.ContactName</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Country</td>
                        <td>@item.City</td>
                        <td class="center hidden-phone">@item.Status</td>
                        <td class="center hidden-phone">@Html.ActionLink(" ", "DeleteSupplier", new { id = item.ID }, new { @class = "btn text-danger fas fa-times" })</td>
                        <td class="center hidden-phone">@Html.ActionLink(" ", "UpdateSupplier", new { id = item.ID }, new { @class = "text-warning fas fa-edit" })</td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>

<script src="~/Areas/Administration/AdminContent/SupplierDTJ.js"></script>