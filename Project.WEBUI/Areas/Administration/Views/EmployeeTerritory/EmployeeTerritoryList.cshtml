@model EmployeeTerritoryVM
@{
    ViewBag.Title = "EmployeeTerritoryList";
    Layout = "~/Areas/Administration/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel-body">
    <div class="adv-table">
        <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
            <thead>
                <tr>
                    <th>Çalışan İsmi</th>
                    <th>Çalışan Soyismi</th>
                    <th>Bölge</th>
                    <th class="hidden-phone">Durum</th>
                </tr>
            </thead>
            <tbody>
                @foreach (EmployeeTerritory item in Model.EmployeeTerritories)
                {
                    <tr class="gradeX">
                        <td>@item.Employee.FirstName</td>
                        <td>@item.Employee.LastName</td>
                        <td>@item.Territory.TerritoryDescription</td>
                        <td class="center hidden-phone">@item.Status</td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>

<script src="~/Areas/Administration/AdminContent/ETDTJ.js"></script>