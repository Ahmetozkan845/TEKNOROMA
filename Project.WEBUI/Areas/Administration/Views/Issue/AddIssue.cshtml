@model IssueVM
@{
    ViewBag.Title = "AddIssue";
    Layout = "~/Areas/Administration/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="row container">
        <div class="col-sm-10">
            <section class="panel">
                <header class="panel-heading">
                    Teknik Arıza Ekleme Sayfası
                </header>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">
                            Başlık
                        </label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Issue.Subject, new { @class = "form-control" })
                        </div>
                    </div>
                    <br /><br />

                    <div class="form-group">
                        <label class="col-sm-2 control-label">
                            Arıza Notu
                        </label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Issue.Answer, new { @class = "form-control" })
                        </div>
                    </div>
                    <br /><br />

                    <div class="form-group">
                        <label class="col-sm-2 control-label">
                            Kullanıcı
                        </label>
                        <div class="col-sm-10">
                            @Html.DropDownListFor(x => x.Issue.AppUserID, new SelectList(Model.AppUsers, "ID", "UserName"), "Lütfen kullanıcı seçiniz", new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-10">
                            <button class="btn btn-primary">Teknik Arıza Ekle</button>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
}
