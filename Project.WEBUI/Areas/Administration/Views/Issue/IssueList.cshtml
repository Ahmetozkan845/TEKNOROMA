@model IssueVM
@{
    ViewBag.Title = "IssueList";
    Layout = "~/Areas/Administration/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel-body">
    <div class="adv-table">
        <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Başlık</th>
                    <th>Sorun</th>
                    <th>Kullanıcı Adı</th>
                    <th>Talep Tarihi</th>
                    <th>Statü</th>
                    <th class="hidden-phone">Durum</th>
                    <th class="hidden-phone">Sil</th>
                    <th class="hidden-phone">Güncelle</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Issue item in Model.Issues)
                {
                    <tr class="gradeX">
                        <td>@item.ID</td>
                        <td>@item.Subject</td>
                        <td>@item.Answer</td>
                        @if (item.AppUser != null)
                        {
                            <td>@item.AppUser.UserName</td>
                        }
                        else
                        {
                            <td>@item.Email</td>
                        }
                        <td>@item.OpenDate</td>
                        <td>@item.IssueStatus</td>
                        <td class="center hidden-phone">@item.Status</td>
                        <td class="center hidden-phone">@Html.ActionLink(" ", "DeleteIssue", new { id = item.ID }, new { @class = "btn text-danger fas fa-times" })</td>
                        <td class="center hidden-phone">@Html.ActionLink(" ", "UpdateIssue", new { id = item.ID }, new { @class = "btn text-warning fas fa-edit" })</td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>


<script src="~/Areas/Administration/AdminContent/IssueDTJ.js"></script>